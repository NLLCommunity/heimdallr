{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "go build",
      "command": "go build ./...",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$go"]
    },
    {
      "type": "shell",
      "label": "go test",
      "command": "go test ./...",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": ["$go"]
    },
    {
      "type": "shell",
      "label": "go test -race",
      "command": "go test -race ./...",
      "group": "test",
      "problemMatcher": ["$go"]
    },
    {
      "type": "shell",
      "label": "go test -cover",
      "command": "go test -cover ./...",
      "group": "test",
      "problemMatcher": ["$go"]
    }
  ]
}
